generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Pillar {
  id                     String                  @id
  type                   String
  icon                   String?
  description            String?
  weight                 Float                   @default(1.0)
  createdAt              DateTime                @default(now())
  updatedAt              DateTime
  mediaType              mediaType
  characterRatingPillars CharacterRatingPillar[]
  questions              Question[]
  ratingPillars          RatingPillar[]

  @@unique([type, mediaType])
}

model RatingPillar {
  id        String   @id
  score     Float
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    String
  seriesId  String
  pillarId  String
  pillar    Pillar   @relation(fields: [pillarId], references: [id], onDelete: Cascade)
  series    Series   @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId, pillarId])
  @@index([userId])
  @@index([seriesId])
  @@index([pillarId])
}

model Question {
  id          String   @id
  title       String
  weight      Float    @default(1.0)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  pillarId    String
  pillar      Pillar   @relation(fields: [pillarId], references: [id], onDelete: Cascade)

  @@index([pillarId])
}

model Series {
  id            String             @id
  title         String
  description   String?
  releaseYear   Int?
  imageUrl      String?
  wideImageUrl  String?
  slug          String?            @unique
  genre         String[]
  seasons       Int?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime
  score         Float
  ranking       Int                @default(0)
  pillarScores  Json?
  characters    Character[]
  episodes      Episode[]
  ratingPillars RatingPillar[]
  seriesSeasons Season[]
  userStatuses  UserSeriesStatus[]

  @@index([createdAt])
  @@index([releaseYear])
}

model User {
  id                     String                  @id
  name                   String
  email                  String                  @unique
  emailVerified          Boolean
  image                  String?
  createdAt              DateTime
  updatedAt              DateTime
  role                   String                  @default("user")
  heroImage              String?
  profileImage           String?
  account                Account[]
  characterRatingPillars CharacterRatingPillar[]
  donations              Donation[]
  ratingPillars          RatingPillar[]
  session                Session[]
  userFavorites          UserFavorite[]
  seriesStatuses         UserSeriesStatus[]
}

model UserFavorite {
  id        String    @id @default(cuid())
  userId    String
  mediaType mediaType
  mediaId   String
  rank      Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, mediaType, mediaId])
  @@unique([userId, mediaType, rank])
  @@index([userId, mediaType])
}

model Donation {
  id                    String   @id @default(cuid())
  stripeSessionId       String   @unique
  stripePaymentIntentId String?
  amount                Int
  currency              String   @default("usd")
  status                String   @default("completed")
  email                 String
  userId                String?
  metadata              Json?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User?    @relation(fields: [userId], references: [id])

  @@index([email])
  @@index([userId])
  @@index([createdAt])
}

model UserSeriesStatus {
  id          String   @id @default(cuid())
  userId      String
  seriesId    String
  isWatchlist Boolean  @default(false)
  isSeen      Boolean  @default(false)
  isWatching  Boolean  @default(false)
  isFavorite  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  series      Series   @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
  @@index([userId])
  @@index([seriesId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Character {
  id                     String                  @id
  name                   String
  posterUrl              String?
  heroUrl                String?
  ranking                Float                   @default(0)
  createdAt              DateTime                @default(now())
  updatedAt              DateTime
  seriesId               String
  actorName              String?
  description            String?
  pillarScores           Json?
  score                  Float                   @default(0)
  slug                   String?                 @unique
  series                 Series                  @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  characterRatingPillars CharacterRatingPillar[]

  @@index([seriesId])
  @@index([name])
}

model CharacterRatingPillar {
  id          String    @id
  score       Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  userId      String
  characterId String
  pillarId    String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  pillar      Pillar    @relation(fields: [pillarId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, characterId, pillarId])
  @@index([userId])
  @@index([characterId])
  @@index([pillarId])
}

model Season {
  id           String    @id
  seasonNumber Int
  name         String?
  slug         String?   @unique
  description  String?
  posterUrl    String?
  heroImageUrl String?
  score        Float     @default(0)
  ranking      Float     @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  seriesId     String
  episodes     Episode[]
  series       Series    @relation(fields: [seriesId], references: [id], onDelete: Cascade)

  @@index([seriesId])
}

model Episode {
  id            String   @id
  episodeNumber Int
  title         String
  slug          String?  @unique
  description   String?
  heroImageUrl  String?
  score         Float    @default(0)
  ranking       Float    @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime
  seasonId      String
  seriesId      String?
  season        Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  series        Series?  @relation(fields: [seriesId], references: [id], onDelete: Cascade)

  @@index([seasonId])
  @@index([seriesId])
}

enum mediaType {
  SERIES
  CHARACTER
  EPISODE
  SEASON
}
